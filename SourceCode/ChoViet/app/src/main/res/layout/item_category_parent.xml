<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_parent_category"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_big"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cate_thethao"
        android:padding="@dimen/padding_big"/>
    <edu.hust.truongvu.choviet.helper.customview.MyTextView
        android:id="@+id/name_parent_category"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_tiny"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"
        android:textColor="@color/black"
        android:text="Thiết bị văn phòng, Máy in"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayicon"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"/>
</LinearLayout>