<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">
        <edu.hust.truongvu.choviet.helper.customview.MyTextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            android:text="Id order: 1"/>
        <edu.hust.truongvu.choviet.helper.customview.MyTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text="30/5/2018"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="@dimen/margin_small"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/icon_size_bigger"
            android:layout_height="@dimen/icon_size_big"
            android:scaleType="centerCrop"
            android:src="@drawable/giaydep"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:orientation="vertical"
                android:layout_weight="5">
                <edu.hust.truongvu.choviet.helper.customview.MyTextView
                    android:id="@+id/name_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    android:text="Điện thoại abcdefgh"/>
                <edu.hust.truongvu.choviet.helper.customview.MyTextView
                    android:id="@+id/price_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorRed"
                    android:text="10.000 Đ"/>
                <edu.hust.truongvu.choviet.helper.customview.MyTextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    android:text="Số lượng: 12"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/check_wait"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/checked"
                    android:tint="@color/colorGray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayicon"
                    android:textSize="@dimen/text_size_tiny"
                    android:text="@string/waiting"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_medium"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/check_shipping"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/checked"
                    android:tint="@color/colorGray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayicon"
                    android:textSize="@dimen/text_size_tiny"
                    android:text="@string/shipping"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_medium"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/check_received"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/checked"
                    android:tint="@color/colorGray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayicon"
                    android:textSize="@dimen/text_size_tiny"
                    android:text="@string/received"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_medium"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/check_cancel"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/checked"
                    android:tint="@color/colorGray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayicon"
                    android:textSize="@dimen/text_size_tiny"
                    android:text="@string/cancel"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="@dimen/margin_small">
        <RelativeLayout
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red"
            android:paddingLeft="@dimen/padding_huge"
            android:paddingRight="@dimen/padding_huge"
            android:paddingTop="@dimen/padding_big"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/padding_big">
            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_tiny"
                android:text="@string/delete"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_update_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue_dark"
            android:paddingLeft="@dimen/padding_huge"
            android:paddingRight="@dimen/padding_huge"
            android:paddingTop="@dimen/padding_big"
            android:paddingBottom="@dimen/padding_big"
            android:layout_toLeftOf="@id/btn_delete"
            android:layout_marginRight="@dimen/margin_medium">
            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_tiny"
                android:text="@string/update_status"/>
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/colorGrayLight"/>
</LinearLayout>