<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.hust.truongvu.choviet.user.myshop.report.ShopReportFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_big"
                android:background="@color/white">
                <edu.hust.truongvu.choviet.helper.customview.MyTextView
                    android:id="@+id/tv_total_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Total product: 12"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/padding_big"
                android:layout_marginTop="@dimen/margin_small">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/layout_label_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:tint="@color/grayicon"
                            android:src="@drawable/group_follow"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/grayicon"
                            android:textSize="@dimen/text_size_tiny"
                            android:text="Follow by"/>
                    </LinearLayout>
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:id="@+id/tv_user_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_label_a"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_big"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="@dimen/margin_small" />
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@color/colorGray"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/layout_label_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:tint="@color/grayicon"
                            android:src="@drawable/star"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textSize="@dimen/text_size_tiny"
                            android:textColor="@color/grayicon"
                            android:text="Rate"/>
                    </LinearLayout>
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:id="@+id/tv_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_label_b"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_big"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="@dimen/margin_small" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_big"
                android:paddingBottom="@dimen/padding_big"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/white">
                <edu.hust.truongvu.choviet.helper.customview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:text="@string/top_product"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:padding="@dimen/padding_small"
                                android:src="@drawable/star_yellow"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_tiny"
                                android:textSize="@dimen/text_size_tiny"
                                android:textColor="@color/grayicon"
                                android:layout_gravity="center_vertical"
                                android:text="@string/top_rate"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_toprate"
                            android:layout_width="@dimen/icon_size_bigger"
                            android:layout_height="@dimen/icon_size_big"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:src="@drawable/img_error"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:id="@+id/name_toprate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="2"
                            android:padding="@dimen/padding_medium"
                            android:textSize="@dimen/text_size_tiny"
                            android:textColor="@color/black"
                            android:text=""/>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_huge"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:padding="@dimen/padding_small"
                                android:src="@drawable/like_red"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_tiny"
                                android:textSize="@dimen/text_size_tiny"
                                android:textColor="@color/grayicon"
                                android:layout_gravity="center_vertical"
                                android:text="@string/most_like"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_mostlike"
                            android:layout_width="@dimen/icon_size_bigger"
                            android:layout_height="@dimen/icon_size_big"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:src="@drawable/img_error"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:id="@+id/name_mostlike"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="2"
                            android:padding="@dimen/padding_medium"
                            android:textSize="@dimen/text_size_tiny"
                            android:textColor="@color/black"
                            android:text=""/>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_huge"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:padding="@dimen/padding_small"
                                android:src="@drawable/cart_green"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_tiny"
                                android:textSize="@dimen/text_size_tiny"
                                android:textColor="@color/grayicon"
                                android:layout_gravity="center_vertical"
                                android:text="@string/best_sell"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_bestsell"
                            android:layout_width="@dimen/icon_size_bigger"
                            android:layout_height="@dimen/icon_size_big"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:src="@drawable/img_error"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:id="@+id/name_bestsell"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="2"
                            android:padding="@dimen/padding_medium"
                            android:textSize="@dimen/text_size_tiny"
                            android:textColor="@color/black"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_big">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_medium"
                    android:paddingRight="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_small"
                    android:layout_weight="1">
                    <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/chart_brand"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/icon_size_huge" >
                    </lecho.lib.hellocharts.view.PieChartView>
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/chart_brand"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/brand"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_medium"
                    android:paddingRight="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_small"
                    android:layout_weight="1">
                    <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/chart_category"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/icon_size_huge" >
                    </lecho.lib.hellocharts.view.PieChartView>
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/chart_category"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/category"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_big">
                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/chart_line"
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_medium"
                    android:layout_height="200dp" >
                </lecho.lib.hellocharts.view.LineChartView>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
