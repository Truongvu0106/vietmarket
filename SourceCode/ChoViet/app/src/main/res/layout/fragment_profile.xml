<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context=".user.ProfileFragment">
    <LinearLayout
        android:id="@+id/layout_infor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header_small"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:id="@+id/layout_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="@dimen/icon_size_big"
                    android:layout_height="@dimen/icon_size_big"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_huge"
                    android:src="@drawable/edit_profile"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/icon_size_bigger"
                    android:layout_height="@dimen/icon_size_bigger"
                    android:padding="@dimen/padding_small"
                    android:src="@drawable/user_default"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    app:civ_border_width="@dimen/margin_tiny"
                    app:civ_border_color="@color/white"/>
                <ImageView
                    android:id="@+id/btn_setting"
                    android:layout_width="@dimen/icon_size_big"
                    android:layout_height="@dimen/icon_size_big"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_huge"
                    android:src="@drawable/settings"/>
            </LinearLayout>
            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:text="truongvu0106"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/btn_your_order"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_size_big">
                        <ImageView
                            android:id="@+id/img_option1"
                            android:layout_width="@dimen/icon_size_big"
                            android:layout_height="@dimen/icon_size_big"
                            android:padding="@dimen/padding_large"
                            android:src="@drawable/prof_donhang"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_option1"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="@string/your_order"/>
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_big"
                            android:tint="@color/black"
                            android:padding="@dimen/padding_medium"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/next"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/margin_small"
                        android:paddingLeft="@dimen/margin_medium"
                        android:paddingRight="@dimen/margin_medium"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/order_wait"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_size_normal"
                                android:src="@drawable/wait"
                                android:padding="@dimen/padding_medium"
                                android:tint="@color/colorGray"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grayicon"
                                android:text="@string/waiting"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/order_ship"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_size_normal"
                                android:src="@drawable/box"
                                android:padding="@dimen/padding_medium"
                                android:tint="@color/colorGray"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grayicon"
                                android:text="@string/shipping"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/order_receive"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_size_normal"
                                android:src="@drawable/received"
                                android:padding="@dimen/padding_medium"
                                android:tint="@color/colorGray"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grayicon"
                                android:text="@string/received"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/order_cancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_size_normal"
                                android:src="@drawable/cancel"
                                android:padding="@dimen/padding_medium"
                                android:tint="@color/colorGray"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grayicon"
                                android:text="@string/cancel"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>
                    <RelativeLayout
                        android:id="@+id/btn_your_wishlist"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_size_big">
                        <ImageView
                            android:id="@+id/img_option2"
                            android:layout_width="@dimen/icon_size_big"
                            android:layout_height="@dimen/icon_size_big"
                            android:padding="@dimen/padding_large"
                            android:src="@drawable/prof_spyeuthich"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_option2"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="@string/your_wishlist"/>
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_big"
                            android:tint="@color/black"
                            android:padding="@dimen/padding_medium"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/next"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>
                    <RelativeLayout
                        android:id="@+id/btn_your_favorite_shop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_size_big">
                        <ImageView
                            android:id="@+id/img_option3"
                            android:layout_width="@dimen/icon_size_big"
                            android:layout_height="@dimen/icon_size_big"
                            android:padding="@dimen/padding_large"
                            android:src="@drawable/prof_gianhangyeuthich"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_option3"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="@string/your_favorite_shop"/>
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_big"
                            android:tint="@color/black"
                            android:padding="@dimen/padding_medium"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/next"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>
                    <RelativeLayout
                        android:id="@+id/btn_your_shop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_size_big">
                        <ImageView
                            android:id="@+id/img_option4"
                            android:layout_width="@dimen/icon_size_big"
                            android:layout_height="@dimen/icon_size_big"
                            android:padding="@dimen/padding_large"
                            android:src="@drawable/prof_cuahangcuaban"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_option4"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="@string/your_store"/>
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_big"
                            android:tint="@color/black"
                            android:padding="@dimen/padding_medium"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/next"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/btn_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_size_big">
                        <ImageView
                            android:id="@+id/img_option5"
                            android:layout_width="@dimen/icon_size_big"
                            android:layout_height="@dimen/icon_size_big"
                            android:padding="@dimen/padding_large"
                            android:src="@drawable/prof_taikhoan"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_option5"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="@string/account"/>
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_big"
                            android:tint="@color/black"
                            android:padding="@dimen/padding_medium"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/next"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>
                    <RelativeLayout
                        android:id="@+id/btn_setting_two"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_size_big">
                        <ImageView
                            android:id="@+id/img_option6"
                            android:layout_width="@dimen/icon_size_big"
                            android:layout_height="@dimen/icon_size_big"
                            android:padding="@dimen/padding_large"
                            android:src="@drawable/prof_caidat"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_option6"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="@string/settings"/>
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_big"
                            android:tint="@color/black"
                            android:padding="@dimen/padding_medium"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/next"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>
                    <RelativeLayout
                        android:id="@+id/btn_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_size_big">
                        <ImageView
                            android:id="@+id/img_option7"
                            android:layout_width="@dimen/icon_size_big"
                            android:layout_height="@dimen/icon_size_big"
                            android:padding="@dimen/padding_large"
                            android:src="@drawable/prof_vechungtoi"/>
                        <edu.hust.truongvu.choviet.helper.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_option7"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="@string/about_us"/>
                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_big"
                            android:tint="@color/black"
                            android:padding="@dimen/padding_medium"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/next"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_err"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:padding="@dimen/padding_large"
                android:src="@drawable/err_not_login"/>
            <Button
                android:id="@+id/btn_signin_now"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/sign_in_now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/bg_color"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
