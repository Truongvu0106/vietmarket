<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.hust.truongvu.choviet.user.myshop.registershop.RegisterShopActivity">
    <include
        layout="@layout/toolbar_extra"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_medium">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_big"
                    android:orientation="vertical">
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_tiny"
                        android:textColor="@color/black"
                        android:text="@string/name_shop"/>
                    <edu.hust.truongvu.choviet.helper.customview.MyEditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small" />
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_tiny"
                        android:textColor="@color/black"
                        android:text="@string/slogan"/>
                    <edu.hust.truongvu.choviet.helper.customview.MyEditText
                        android:id="@+id/edt_slogan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size_large"
                            android:orientation="vertical"
                            android:layout_weight="2">
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_tiny"
                                android:textColor="@color/black"
                                android:text="@string/avatar"/>
                            <RelativeLayout
                                android:id="@+id/btn_img_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/margin_tiny"
                                android:background="@drawable/bg_border_gray">
                                <ImageView
                                    android:layout_width="@dimen/icon_size_small"
                                    android:layout_height="@dimen/icon_size_small"
                                    android:src="@drawable/ic_add"
                                    android:tint="@color/colorGray"
                                    android:layout_centerInParent="true"/>
                                <ImageView
                                    android:id="@+id/img_avatar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:visibility="gone"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size_large"
                            android:orientation="vertical"
                            android:layout_weight="3">
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_tiny"
                                android:textColor="@color/black"
                                android:text="@string/cover"/>
                            <RelativeLayout
                                android:id="@+id/btn_img_cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/margin_tiny"
                                android:background="@drawable/bg_border_gray">
                                <ImageView
                                    android:layout_width="@dimen/icon_size_small"
                                    android:layout_height="@dimen/icon_size_small"
                                    android:src="@drawable/ic_add"
                                    android:tint="@color/colorGray"
                                    android:layout_centerInParent="true"/>
                                <ImageView
                                    android:id="@+id/img_cover"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:visibility="gone"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_upload_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/upload_image"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimaryDark"/>
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/phone"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_tiny" />
                    <edu.hust.truongvu.choviet.helper.customview.MyEditText
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small" />
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_tiny"
                        android:textColor="@color/black"
                        android:text="@string/address"/>
                    <edu.hust.truongvu.choviet.helper.customview.MyEditText
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:lines="3" />
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_tiny"
                        android:textColor="@color/black"
                        android:text="@string/website"/>
                    <edu.hust.truongvu.choviet.helper.customview.MyEditText
                        android:id="@+id/edt_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small" />
                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/register"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimaryDark"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
