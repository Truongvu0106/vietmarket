<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.hust.truongvu.choviet.user.setting.SettingActivity">
    <include
        layout="@layout/toolbar_extra"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_size"
        android:padding="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/white">
        <edu.hust.truongvu.choviet.helper.customview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_centerVertical="true"
            android:textColor="@color/grayicon"
            android:text="@string/language"/>
        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_small"
            android:tint="@color/grayicon"
            android:src="@drawable/next"/>
        <ImageView
            android:layout_width="@dimen/icon_size_big"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_small"
            android:layout_toLeftOf="@id/next"
            android:src="@drawable/flag"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_size"
        android:padding="@dimen/margin_small"
        android:background="@color/white">
        <edu.hust.truongvu.choviet.helper.customview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_centerVertical="true"
            android:textColor="@color/grayicon"
            android:text="@string/m_notification"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_small"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"/>

</LinearLayout>
