<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/icon_size_huge"
        android:layout_height="@dimen/icon_size_huge">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.lid.lib.LabelButtonView
                android:id="@+id/labelbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:text="Button"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/grayicon"
                app:label_backgroundColor="@color/colorPrimaryDark"
                app:label_distance="@dimen/margin_small"
                app:label_height="@dimen/icon_size_big"
                app:label_orientation="LEFT_TOP"
                app:label_text="HD"
                app:label_textSize="@dimen/text_size_tiny" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>