<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium"
        android:layout_margin="@dimen/margin_huge">
        <edu.hust.truongvu.choviet.helper.customview.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black"
            android:text="@string/you_have_not_sign_in"/>
        <Button
            android:id="@+id/sigin_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:layout_marginTop="@dimen/margin_big"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/sign_in_now"/>
        <Button
            android:id="@+id/continue_as_guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueDark"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/continue_as_guess"/>
    </LinearLayout>
</RelativeLayout>