<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="120dp">
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/giaydep"/>
                <FrameLayout
                    android:id="@+id/layout_discount"
                    android:layout_width="@dimen/icon_size_big"
                    android:layout_height="@dimen/icon_size_big"
                    android:layout_gravity="right"
                    android:alpha="0.8">
                    <ImageView
                        android:layout_width="@dimen/icon_size_big"
                        android:layout_height="@dimen/icon_size_big"
                        android:tint="@color/colorYellow"
                        android:src="@drawable/tag"/>
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorRed"
                        android:text="-25%"/>
                </FrameLayout>
            </FrameLayout>
            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                android:id="@+id/name_product"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_small"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Giày dép cao cấp aaaaaaaaaaa"/>
            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                android:id="@+id/olđ_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="20 000đ"/>
            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                android:id="@+id/new_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorRed"
                android:text="15 000đ"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_small">
                    <FrameLayout
                        android:id="@+id/btn_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:padding="@dimen/padding_small"
                            android:src="@drawable/like_empty"/>
                        <ImageView
                            android:id="@+id/img_like_fill"
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:padding="@dimen/padding_small"
                            android:visibility="gone"
                            android:src="@drawable/like_fill"/>
                    </FrameLayout>
                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:padding="@dimen/padding_small"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:src="@drawable/comment"/>
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(100)"/>
                </LinearLayout>
                <RatingBar
                    android:id="@+id/rate_product"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_alignParentRight="true"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
