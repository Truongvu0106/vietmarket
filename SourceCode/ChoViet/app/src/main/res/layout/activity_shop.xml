<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shop.details_shop.ShopActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <android.support.v7.widget.CardView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                app:cardCornerRadius="@dimen/radius_mediom"
                android:layout_margin="@dimen/margin_small">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/margin_medium"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_back"/>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/img_cover_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/giaydep"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_big">
                    <ImageView
                        android:id="@+id/img_avatar_shop"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:padding="@dimen/padding_small"
                        android:scaleType="fitCenter"
                        android:background="@drawable/bg_white_border"
                        android:src="@drawable/nikon"/>
                    <RelativeLayout
                        android:id="@+id/btn_follow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="@dimen/padding_medium"
                            android:paddingBottom="@dimen/padding_medium"
                            android:background="@drawable/bg_border_gray">
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/follow"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_followed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="@dimen/padding_medium"
                            android:paddingBottom="@dimen/padding_medium"
                            android:background="@drawable/bg_color"
                            android:visibility="gone">
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/follow"/>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="@dimen/margin_medium">
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:id="@+id/tv_name_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="Nikon Store"/>
                    <edu.hust.truongvu.choviet.helper.customview.MyTextView
                        android:id="@+id/tv_slogan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="Nang niu ban chan Viet"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_big"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:padding="@dimen/padding_small"
                                android:src="@drawable/shopping_bag"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:id="@+id/number_products"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorRed"
                                android:layout_marginLeft="@dimen/margin_tiny"
                                android:text="48"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:text="@string/products"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_big"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:padding="@dimen/padding_small"
                                android:src="@drawable/star"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:id="@+id/rate_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorRed"
                                android:layout_marginLeft="@dimen/margin_tiny"
                                android:text="4.8"/>
                            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:text="@string/rates"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_medium">
            <edu.hust.truongvu.choviet.helper.customview.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_now"/>
            <FrameLayout
                android:id="@+id/layout_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5" />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_medium"
            android:layout_marginTop="@dimen/margin_medium">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:padding="@dimen/padding_big"
                    android:src="@drawable/ic_address"/>
                <edu.hust.truongvu.choviet.helper.customview.MyTextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:text="Nha N1, chung cu Dong Tau"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:padding="@dimen/padding_big"
                    android:src="@drawable/ic_phone"/>
                <edu.hust.truongvu.choviet.helper.customview.MyTextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:text="0983815459"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:padding="@dimen/padding_big"
                    android:src="@drawable/ic_website"/>
                <edu.hust.truongvu.choviet.helper.customview.MyTextView
                    android:id="@+id/tv_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:text="www.hust.edu.vn"/>
            </LinearLayout>
        </LinearLayout>
        <edu.hust.truongvu.choviet.helper.customview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/padding_big"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/products"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_small">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
